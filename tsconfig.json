{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2022",
    "moduleResolution": "bundler",
    "lib": ["ES2020"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@credebl/*": ["packages/*/src"]
    },
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false
  },
  "ts-node": {
    "files": true
  },
  "exclude": ["node_modules", "**/build"]
}
